<h1>Products</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td>$<%= product.formatted_price %></td>
        <td><%= link_to 'Show', product %></td>
        <!-- <td><%= link_to 'Edit', edit_product_path(product) %></td> -->
        <!-- <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <td><%= link_to 'Add To Cart', cart_items_path(cart_items: { product_id: product.id, quantity: 1}), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

